<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下的状态 -->
    <item android:state_enabled="true" android:state_pressed="true" >
        <shape>
            <gradient android:startColor="@color/colorPrimaryDark" android:endColor="@color/colorPrimaryDark"
                android:angle="90"/>
            <!--<stroke android:width="3dp" android:color="@color/light_black" />-->
            <corners android:topLeftRadius="@dimen/urgent_btn_radius"
                android:topRightRadius="@dimen/urgent_btn_radius"
                android:bottomLeftRadius="@dimen/urgent_btn_radius"
                android:bottomRightRadius="@dimen/urgent_btn_radius" />
        </shape>
    </item>
    <!-- 选中的状态 -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimary"
                android:angle="270" />
            <corners android:topLeftRadius="@dimen/urgent_btn_radius"
                android:topRightRadius="@dimen/urgent_btn_radius"
                android:bottomLeftRadius="@dimen/urgent_btn_radius"
                android:bottomRightRadius="@dimen/urgent_btn_radius" />
        </shape>
    </item>
    <!-- 没操作的状态 -->
    <item >
        <shape>
            <gradient android:startColor="@color/colorPrimary"
                android:centerColor="@color/colorAccent"
                android:endColor="@color/colorAccent"
                android:angle="270" />
            <corners android:topLeftRadius="@dimen/urgent_btn_radius"
                android:topRightRadius="@dimen/urgent_btn_radius"
                android:bottomLeftRadius="@dimen/urgent_btn_radius"
                android:bottomRightRadius="@dimen/urgent_btn_radius" />
        </shape>
    </item>
</selector>