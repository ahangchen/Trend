<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
    <android.support.v7.preference.PreferenceCategory
        android:key="pref_general"
        android:title="@string/pref_header_general"
        android:persistent="false">
        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="example_switch"
            android:summary="@string/pref_description_social_recommendations"
            android:title="@string/pref_title_social_recommendations"/>

        <!-- NOTE: EditTextPreference accepts EditText attributes. -->
        <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
        <android.support.v7.preference.EditTextPreference
            android:icon="@drawable/ic_info_black_24dp"
            android:capitalize="words"
            android:defaultValue="@string/pref_default_display_name"
            android:summary="@string/pref_default_display_name"
            android:inputType="textCapWords"
            android:key="example_text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_display_name"/>

        <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
             dismiss it. -->
        <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
        <android.support.v7.preference.ListPreference
            android:defaultValue="-1"
            android:entries="@array/pref_example_list_titles"
            android:entryValues="@array/pref_example_list_values"
            android:key="example_list"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_add_friends_to_messages"/>
    </android.support.v7.preference.PreferenceCategory>
    <android.support.v7.preference.PreferenceCategory
        android:key="pref_notification"
        android:icon="@drawable/ic_notifications_black_24dp"
        android:title="@string/pref_header_notifications"
        android:persistent="false">
        <android.support.v7.preference.CheckBoxPreference
            android:key="notifications_new_message"

            android:title="@string/pref_title_new_message_notifications"/>

        <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:dependency="notifications_new_message"
            android:key="notifications_new_message_vibrate"
            android:title="@string/pref_title_vibrate"/>
    </android.support.v7.preference.PreferenceCategory>
    <android.support.v7.preference.PreferenceCategory
        android:key="pref_data_sync"
        android:icon="@drawable/ic_sync_black_24dp"
        android:title="@string/pref_header_data_sync"
        android:persistent="false">
        <android.support.v7.preference.ListPreference
            android:defaultValue="180"
            android:entries="@array/pref_sync_frequency_titles"
            android:entryValues="@array/pref_sync_frequency_values"
            android:key="sync_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_sync_frequency"/>
    </android.support.v7.preference.PreferenceCategory>
    <android.support.v7.preference.PreferenceCategory
        android:title="@string/pref_category_reading">
        <!-- NOTE: EditTextPreference accepts EditText attributes. -->
        <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

        <android.support.v7.preference.ListPreference
            android:key="@string/pref_text_size"
            android:entries="@array/text_size_options"
            android:entryValues="@array/pref_text_size_values"
            android:defaultValue="0"
            android:title="@string/pref_text_size_title" />
        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="@string/pref_highlight_updated"
            android:title="@string/pref_highlight_updated_title"
            android:summary="@string/pref_highlight_updated_summary"
            android:defaultValue="true" />
    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>